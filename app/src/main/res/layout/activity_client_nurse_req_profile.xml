<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".client_nurse_req_profile">

    <LinearLayout
        android:id="@+id/maincontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/nurse" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/clientreqnursename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Christy Fred"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="24sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/clientreqnursetype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Elderly Care Nurse"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="112dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.1"
                app:srcCompat="@drawable/contacts" />

            <TextView
                android:id="@+id/clientreqnursegender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:text="Gender: Female"
                android:textAlignment="viewStart"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="69dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.1"
                app:srcCompat="@drawable/age" />

            <TextView
                android:id="@+id/clientreqnurseage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="20 years"
                android:textAlignment="viewStart"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.1"
                app:srcCompat="@drawable/home" />

            <TextView
                android:id="@+id/clientreqnurseaddress"
                android:layout_width="304dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:text="Address: Beirut"
                android:textAlignment="viewStart"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="69dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.1"
                app:srcCompat="@drawable/salary" />

            <TextView
                android:id="@+id/clientreqnursetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Monday 11:00 13:00"
                android:textAlignment="viewStart"

                android:textColor="@color/colorAccent"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="69dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="70dp"
                android:layout_weight="0.1"
                app:srcCompat="@drawable/cv" />

            <Button
                android:id="@+id/clientreqnursecv"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginEnd="50dp"
                android:layout_weight="0.8"
                android:background="@color/colorAccent"
                android:text="View CV"
                android:textColor="#FFFCFCFE" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/feedbackcontainer"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/clientreqnursfeedbacklist"
                android:layout_width="wrap_content"
                android:layout_height="480dp"></ListView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="2">


            <TextView
                android:layout_width="168dp"
                android:layout_height="50dp"
                android:layout_marginRight="30dp"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="number of hour needed"

                android:textColor="@color/colorAccent"
                android:textColorHighlight="@color/colorAccent" />

            <EditText
                android:id="@+id/clientnbofhour"
                android:layout_width="38dp"
                android:hint="2"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="1.3" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="60dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/requstnusebtn"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="80dp"
                android:background="@color/colorAccent"
                android:text="Request"
                android:textColor="#FFFCFCFE" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>